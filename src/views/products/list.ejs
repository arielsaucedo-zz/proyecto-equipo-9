<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

<body>
    <%- include('../partials/header') %>
    <main>
        <div class="container products-wrapper">
        <% if(products.length != 0){ %>
            <div class="row">
                <div class="col-12">
                    <h1 class="products-title"><%= title %></h1>
                </div>
                <% for (let i = 0; i < products.length; i++) { %>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <section class="product-box">
                            <a href="/products/detail/<%= products[i].id %>">
                                <figure class="product-box_image">
                                    <img src="/images/products/<%= products[i].image %>" alt="imagen de producto">
                                </figure>
                                <article class="product-box_data">
                                    <div class="col-12 pl-0">
                                        <h2 class="original-price font-weight-light"><strike>$ <%= products[i].price %> </strike></h2> <!-- Original Price -->
                                    </div>
                                    <h2>$ <%= products[i].price %></h2> <!-- Price with discount -->
                                    <span>DISC% OFF</span>
                                    <p><%= products[i].name %></p>
                                    <i class="fas fa-truck"></i>
                                </article>
                            </a>
                        </section>
                    </div>
                <% } %>
                </div>
            </div>
        <% } else { %>
            <div class="col-12">
                <h2 class="products-title" style="padding: 100px 0; color: tomato;">Todav√≠a no hay productos para catalogar.</h2>
            </div>
        <% } %>
        </div>
    </main>
    <%- include('../partials/footer') %>
</body>

</html>