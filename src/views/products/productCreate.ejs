<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

<body>

    <%- include('../partials/header') %>

    <div class="productForm-container productForm-d-flex margin-b-20">
        <form class="w-100" action="/products" method="POST" enctype="multipart/form-data">
            <div class="w-100 d-flex">
                <h2 class="register-h2">Creacion de productos</h2>
                <hr>
            </div>
            <div class="inputs-productForm d-flex f-wrap">
                <% errors.forEach(error => { %>
                    <% if(error.param == "product_name") { %>
                        <span class="span_errors">* <%= error.msg %></span>
                    <% } else { "" } %>
                <% }) %>
                <label for="">Nombre del producto</label>
                <input class="productForm-input-style-border" type="text" name="product_name" id="inputNewProduct">

                <% errors.forEach(error => { %>
                    <% if(error.param == "product_category") { %>
                        <span class="span_errors">* <%= error.msg %></span>
                    <% } else { "" } %>
                <% }) %>
                <label for="">Categoria</label>
                <input class="productForm-input-style-border" type="text" name="product_category" id="inputNewProduct">

                <% errors.forEach(error => { %>
                    <% if(error.param == "product_description") { %>
                        <span class="span_errors">* <%= error.msg %></span>
                    <% } else { "" } %>
                <% }) %>
                <label for="">Descripcion</label>
                <input class="productForm-input-style-border" type="text" name="product_description" id="inputNewProduct">

                <% errors.forEach(error => { %>
                    <% if(error.param == "product_image") { %>
                        <span class="span_errors">* <%= error.msg %></span>
                    <% } else { "" } %>
                <% }) %>
                <label for="">Imagen del producto</label>
                <input class="w-100 inputs-productForm" type="file" name="product_image" id="inputNewProduct">

                <% errors.forEach(error => { %>
                    <% if(error.param == "product_quantity") { %>
                        <span class="span_errors">* <%= error.msg %></span>
                    <% } else { "" } %>
                <% }) %>
                <label class="inputs-productForm" for="">Cantidad</label>
                <input class="productForm-input-style-border" type="text" name="product_quantity" id="inputNewProduct">

                <% errors.forEach(error => { %>
                    <% if(error.param == "product_price") { %>
                        <span class="span_errors">* <%= error.msg %></span>
                    <% } else { "" } %>
                <% }) %>
                <label for="">Precio</label>
                <input class="productForm-input-style-border" type="text" name="product_price" id="inputNewProduct">

                <button type="submit" class="productForm-input-style-border class-btn" target="">CREAR</button>

                <button type="reset" class="productForm-input-style-border class-rst">BORRAR</button>
            </div>

        </form>
    </div>

    <%- include('../partials/footer') %>

</body>

</html>