<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

<body>

    <%- include('../partials/header') %>

    <main>
        <div class="container">
            <div class="card mt-4 p-3 shadow-lg rounded border-0">
                <div class="card-body">
                    <div class="card-title text-center mb-4">
                        <h2 class="register-h2">Creaci√≥n de productos</h2>
                        <hr>
                    </div>
                    <form class="w-100" action="/products" method="POST" enctype="multipart/form-data">
                        <div class="form-row">
                            <% errors.forEach(error => { %>
                            <% if(error.param == "product_name") { %>
                            <span class="span_errors">* <%= error.msg %></span>
                            <% } else { "" } %>
                            <% }) %>
                            <div class="form-group col-md-6">
                                <label class="col-form-label" for="inputDefault">Nombre del producto</label>
                                <input class="form-control" type="text" name="product_name" id="inputDefault">
                            </div>
        
                            <% errors.forEach(error => { %>
                            <% if(error.param == "product_category") { %>
                            <span class="span_errors">* <%= error.msg %></span>
                            <% } else { "" } %>
                            <% }) %>
                            <div class="form-group col-md-6">
                                <label class="col-form-label" for="inputDefault">Categoria</label>
                                <select name="product_category" class="form-control">
                                    <% for(let i = 0; i < categories.length; i++) {%>
                                    <option value="<%= categories[i].id %>">
                                        <%= categories[i].name %>
                                    </option>
                                    <% } %>
                                </select>
                            </div>
                        </div>
        
                        <div class="row">
                            <% errors.forEach(error => { %>
                            <% if(error.param == "product_quantity") { %>
                            <span class="span_errors">* <%= error.msg %></span>
                            <% } else { "" } %>
                            <% }) %>
                            <div class="form-group col-md-6">
                                <label class="col-form-label" for="inputDefault">Cantidad</label>
                                <input class="form-control" type="text" name="product_quantity"
                                    id="inputNewProduct">
                            </div>
        
        
                            <% errors.forEach(error => { %>
                            <% if(error.param == "product_price") { %>
                            <span class="span_errors">* <%= error.msg %></span>
                            <% } else { "" } %>
                            <% }) %>
        
                            <div class="form-group col-md-6">
                                <label class="col-form-label">Precio</label>
                                <div class="form-group">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">$</span>
                                        </div>
                                        <input type="text" class="form-control"
                                            aria-label="Amount (to the nearest dollar)" name="product_price">
                                        <div class="input-group-append">
                                            <span class="input-group-text">.00</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <% errors.forEach(error => { %>
                            <% if(error.param == "product_discount") { %>
                            <span class="span_errors">* <%= error.msg %></span>
                            <% } else { "" } %>
                            <% }) %>
                        <div class="form-group col-md-6">
                            <label class="col-form-label col-form-label-lg">Descuento</label>
                                <div class="form-group">
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control form-control-lg"
                                            aria-label="Amount (to the nearest dollar)" name="product_discount"
                                            value="<%= product.discount %>">
                                        <div class="input-group-append">
                                            <span class="input-group-text">%</span>
                                        </div>
                                    </div>
                                </div>
                        </div>
                        
        
                        <% errors.forEach(error => { %>
                        <% if(error.param == "product_image") { %>
                        <span class="span_errors">* <%= error.msg %></span>
                        <% } else { "" } %>
                        <% }) %>
        
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <div class="input-group mb-3">
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="inputGroupFile02" name="image">
                                        <label class="custom-file-label" for="inputGroupFile02">Imagen del producto</label>
                                    </div>
                                    <div class="input-group-append">
                                        <span class="input-group-text">Upload</span>
                                    </div>
                                </div>
                            </div>
                        </div>
        
                        <% errors.forEach(error => { %>
                        <% if(error.param == "product_description") { %>
                        <span class="span_errors">* <%= error.msg %></span>
                        <% } else { "" } %>
                        <% }) %>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label class="col-form-label" for="exampleTextarea">Descripcion</label>
                                <textarea class="form-control" id="exampleTextarea" rows="3" name="product_description">
                            </textarea>
                            </div>
                        </div>
        
                        <button type="submit" class="btn btn-primary" target="">Crear</button>
        
                        <button type="reset" class="btn btn-warning">Limpiar</button>
                        </div>
                    </form>
                </div>
            </div>
            <br>
        </div>
    </main>

    <%- include('../partials/footer') %>

</body>

</html>