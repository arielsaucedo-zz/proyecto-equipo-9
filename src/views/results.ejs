<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Resultados de tu búsqueda'}) %>

<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de la búsqueda: <%= products.length %></h2>
			</div>
			<% if ( products.length == 0 ) { %>
			<div class="col-12">
				<h2 class="products-title" style="color: tomato;">No hay productos que coincidan con esa búsqueda</h2>
			</div>
			<% } else { %>
			<% for (let i = 0; i < products.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box card">
						<a href="/products/detail/<%= products[i].id %>">
							<figure class="product-box_image">
								<img class="img-product" src="/images/products/<%= products[i].image %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data bg-light text-center d-flex justify-content-center"> 
								<% if(products[i].discount > 0) { %>
									<div class="col-12 pl-0">
										<h2 class="original-price font-weight-light"><strike>$ <%= helpers.trunc(products[i].price) %> </strike></h2> <!-- Original Price -->
									</div>
								<% } else { %>
									<div id="sin-descuento" class="col-12 pl-0 ">
												&nbsp;
									</div>
								<% } %> 
								<% if(products[i].discount > 0) { %>
									<span>
										<%= products[i].discount %> % OFF 
									</span>
								<% } %>
									<h2 class="ml-3">
										$<%= helpers.trunc((products[i].price - products[i].price * products[i].discount / 100).toFixed(2)) %>
									</h2>
									<p>
										<%= products[i].name %>
									</p>
									<i id="truck" class="fas fa-truck"></i>

									<form class="m-2" action="/users/<%= products[i].id %>/addToCart" method="POST" style="display: inline-flex">
										<div class="ml-1">
											<button type="submit" class="btn bg-cart"><i class="fas fa-cart-plus mr-2"></i> Agregar al carrito</button>
										</div>
									</form>
							</article>
						</a>
					</section>
				</div>
			<% } %>
			<% } %>
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>

</html>