<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head') %>

<body>
    
    <%- include('../partials/header') %>

    <main>
        <div class="container">
            <div class="card mt-4 p-3 shadow-lg rounded border-0">
                <div class="card-body">
                    <div class="card-title text-center mb-4">
                        <h2 class="register-h2">Registro</h2>
                        <hr>
                    </div>
                    <form class="needs-validation" action="/users" method="POST" enctype="multipart/form-data">
                        <div class="form-row">
                            <div class="col-md-4 mb-3">
                                <label for="validationTooltip01">Nombre</label>
                                <input type="text" class="form-control" id="validationTooltip01"
                                    placeholder="Ingrese su nombre" name="first_name" required>
                                <div class="valid-tooltip">
                                    Looks good!
                                </div>
                                <% errors.forEach(error => { %>
                                <% if(error.param == "first_name") { %>
                                <span class="span_errors">* <%= error.msg %></span>
                                <% } else { "" } %>
                                <% }) %>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationTooltip02">Apellido</label>
                                <input type="text" class="form-control" id="validationTooltip02"
                                    placeholder="Ingrese su apellido" name="last_name" required>
                                <div class="valid-tooltip">
                                    Looks good!
                                </div>
                                <% errors.forEach(error => { %>
                                <% if(error.param == "last_name") { %>
                                <span class="span_errors">* <%= error.msg %></span>
                                <% } else { "" } %>
                                <% }) %>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationTooltipUsername">Nombre de Usuario (e-mail)</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="validationTooltipUsernamePrepend">@</span>
                                    </div>
                                    <input type="text" class="form-control" id="validationTooltipUsername"
                                        placeholder="Ingrese su e-mail" name="user_name"
                                        aria-describedby="validationTooltipUsernamePrepend" required>
                                    <div class="invalid-tooltip">
                                        Please choose a unique and valid username.
                                    </div>
                                </div>
                                <% errors.forEach(error => { %>
                                <% if(error.param == "user_name") { %>
                                <span class="span_errors">* <%= error.msg %></span>
                                <% } else { "" } %>
                                <% }) %>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label for="validationTooltip03">Contrase単a</label>
                                <input type="text" class="form-control" id="validationTooltip03"
                                    placeholder="Ingrese su contrase単a" name="password_initial" required>
                                <div class="invalid-tooltip">
                                    Please provide a valid password.
                                </div>
    
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="validationTooltip03">Confirmacion contrase単a</label>
                                <input type="text" class="form-control" id="validationTooltip03"
                                    placeholder="Ingrese su contrase単a nuevamente" name="password_confirmation" required>
                                <div class="invalid-tooltip">
                                    Please provide a valid password.
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <% errors.forEach(error => { %>
                                <% if(error.param == "password_initial") { %>
                                <div class="">
                                    <span class="span_errors">
                                        * <%= error.msg %>
                                    </span>
                                </div>
                                <% } else { "" } %>
                                <% }) %>
                            </div>
                            <div class="col-md-6 mb-3">
                                <% errors.forEach(error => { %>
                                <% if(error.param == "password_confirmation") { %>
                                <div class="">
                                    <span class="span_errors">
                                        * <%= error.msg %>
                                    </span>
                                </div>
                                <% } else { "" } %>
                                <% }) %>
                            </div>
                        </div>
                        <button class="btn btn-primary" type="submit">Registrarse</button>
                    </form>
                </div>
            </div>
            <br>
        </div>
    </main>

    <%- include('../partials/footer') %>
    
</body>
</html>